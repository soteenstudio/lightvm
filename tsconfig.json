{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es5", "es6", "es7", "es2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "sourceMap": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "typings"],
  "exclude": ["tests"]
}
